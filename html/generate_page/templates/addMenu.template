{{#if controller.showAddButton}}
  <button {{action "toggle" target="view"}} class="pure-button pure-button-xsmall pure-button-thin">
    {{view.label}}
    <i class="icon-plus"></i>
  </button> 

  {{#if view.open}}
  <div class="t-add-menu-container">
    <div class="t-add-menu-popup">
      {{#each attr in controller.availableAttr}}
      <div>{{attr.key}} {{attr.label}}</div>
      {{/each}}

    </div>
  </div>
  {{/if}}
{{/if}}
