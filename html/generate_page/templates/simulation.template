<div class="t-simulation-page">
  <div class="t-simulation-header">
    {{ metadata.title }} {{#linkTo "simulations" class="pure-button"}}<i class="icon-arrow-left"></i> back!!{{/linkTo}}
  </div>
  <div class="t-simulation-main">
    <div class="t-simulation-specification">
      <div class="pure-menu pure-menu-open pure-menu-horizontal t-simulation-specification-menu">
        <ul  class="t-font-xsmall">
          {{#linkTo "simulation.index" controller.id tagName="li" activeClass="pure-menu-selected"}}<a href=false>Description</a>{{/linkTo}}
          {{#linkTo "simulation.config" controller.id tagName="li" activeClass="pure-menu-selected"}}<a href=false>Configuration</a>{{/linkTo}}
          {{#linkTo "simulation.ship" controller.id tagName="li" activeClass="pure-menu-selected"}}<a href=false>Ship</a>{{/linkTo}}
          {{#linkTo "simulation.mission" controller.id tagName="li" activeClass="pure-menu-selected"}}<a href=false>Mission</a>{{/linkTo}}
        </ul>
      </div>
      {{ outlet }}
    </div>
    <div class="t-simulation-view">
      {{ render "renderer" }}
    </div>
  </div>
  <div class="t-simulation-footer"></div>
</div>
