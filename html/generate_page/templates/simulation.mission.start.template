<div class="t-mission-item">
  <div class="t-mission-item-title">Initial orbit</div>
  <div class="t-mission-item-body">
    {{view App.InlineTextFieldView valueBinding="date" label="Start date" thin="true"}}
    {{view App.InlineTextFieldView valueBinding="planet" label="Planet" thin="true"}}
    {{view App.InlineTextFieldView valueBinding="radius" label="Radius" thin="true"}}
    
    {{#if controller.hasInclination}}
      {{view App.InlineTextFieldView valueBinding="inclination" label="Inclination" thin="true"}}
    {{/if}}
    
    {{#if controller.hasLatitude}}
      {{view App.InlineTextFieldView valueBinding="latitude" label="Latitude" thin="true"}}
    {{/if}}
    
    {{#if controller.hasLongitude}}
      {{view App.InlineTextFieldView valueBinding="longitude" label="Longitude" thin="true"}}
    {{/if}}
    
    {{partial "addMenu"}}

  </div>
</div>

